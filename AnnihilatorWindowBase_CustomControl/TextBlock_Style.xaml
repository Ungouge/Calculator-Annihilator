<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AnnihilatorWindowBase_CustomControl">

    <Style TargetType="TextBlock" x:Key="TextBlock_Style">

        <Style.Resources>
            <ResourceDictionary Source="colours.Xaml"/>
        </Style.Resources>

        <Setter Property="FontSize" Value="{Binding Text_FontSize, Mode=OneWay, FallbackValue= 18}"/>
        <Setter Property="Foreground" Value="{StaticResource foreground_Colour}"/>
        <Setter Property="Background" Value="{StaticResource background_Colour}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        
    </Style>
    
</ResourceDictionary>