<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator_Annihilator"
        xmlns:Properties="clr-namespace:Calculator_Annihilator.Properties" x:Class="Calculator_Annihilator.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="1" />
            <Setter Property="FontSize" Value="40" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="Consolas" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="WorkSpace" FontSize="40" Grid.Row="0" Grid.ColumnSpan="4"  Margin="5,1,5,1" TextWrapping="Wrap" Height="Auto"
                 Cursor="IBeam" AcceptsReturn="false" />
        <TextBox x:Name="ResultSpace" FontSize="40" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"  Margin="5,1,5,1" TextWrapping="Wrap" Text=""
                 Height="Auto" Cursor="IBeam" IsReadOnly="True" />

        <Button x:Name="Button_Open_Bracket" Content="(" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_Open_Bracket_Click" Margin="1,1,1,1"/>
        <Button x:Name="Button_Close_Bracket" Content=")" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_Close_Bracket_Click" Margin="1,1,1,1"/>
        <Button x:Name="Button_BackSpace" Click="Button_CE_Click" Content="CE" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="2" VerticalAlignment="Top" 
                Width="200" Height="80" Margin="1,1,1,1" />
        <Button x:Name="Button_Clear" Content="C" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="3" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_Clear_Click" Margin="1,1,1,1" />

        <Button x:Name="Button_7" Content="7" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="0" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_7_Click" Margin="1,1,1,1"  />
        <Button x:Name="Button_8" Content="8" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="1" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_8_Click" Margin="1,1,1,1" />
        <Button x:Name="Button_9" Content="9" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="2" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_9_Click" Margin="1,1,1,1" />
        <Button x:Name="Button_PlusSign" Content="+" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="3" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_PlusSign_Click" Margin="1,1,1,1" />

        <Button x:Name="Button_6" Content="6" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="2" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_6_Click" Margin="1,1,1,1" />
        <Button x:Name="Button_5" Content="5" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="1" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_5_Click" Margin="1,1,1,1" />
        <Button x:Name="Button_4" Content="4" HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_4_Click"  Margin="1,1,1,1" />
        <Button x:Name="Button_MinuSing" Content="-" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="3" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_MinuSing_Click" Margin="1,1,1,1" />

        <Button x:Name="Button_1" Content="1" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="0" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_1_Click" Margin="1,1,1,1" />
        <Button x:Name="Button_2" Content="2" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="1" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_2_Click" Margin="1,1,1,1" />
        <Button x:Name="Button_3" Content="3" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="2" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_3_Click" Margin="1,1,1,1" />
        <Button x:Name="Button_MultiplicationSing" Content="*" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="3" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_MultiplicationSing_Click" Margin="1,1,1,1" />

        <Button x:Name="Button_Comma" Content="," HorizontalAlignment="Left" Grid.Row="6" Grid.Column="0" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_Comma_Click" Margin="1,1,1,1"/>
        <Button x:Name="Button_0" Content="0" HorizontalAlignment="Left" Grid.Row="6" Grid.Column="1" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_0_Click" Margin="1,1,1,1"/>
        <Button x:Name="Button_Equals" Content="=" HorizontalAlignment="Left" Grid.Row="6" Grid.Column="2" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_Equals_Click" Margin="1,1,1,1"/>
        <Button x:Name="Button_DivisionSign" Content="/" HorizontalAlignment="Left" Grid.Row="6" Grid.Column="3" VerticalAlignment="Top" 
                Width="200" Height="80" Click="Button_DivisionSign_Click" Margin="1,1,1,1"/>
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="1,1,1,1">
            <Grid.Resources>
                <Style TargetType="RadioButton">
                    <Setter Property="FontSize" Value="20"/>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <RadioButton GroupName="Calc_Method_Selection" Name="Single_Calculations"  HorizontalAlignment="Left" Margin="15,1,1,1" Grid.Row="0"
                         VerticalAlignment="Center" Checked="Single_Calculations_Button_Checked">
                Single Calculations
            </RadioButton>
            <RadioButton GroupName="Calc_Method_Selection" Name="Complex_Calculations" HorizontalAlignment="Left" Margin="15,1,1,1" Grid.Row="1"
                         VerticalAlignment="Center" IsChecked="True" Checked="Complex_Calculations_Button_Checked">
                Complex Calculations
            </RadioButton>
        </Grid>
    </Grid>
</Window>
