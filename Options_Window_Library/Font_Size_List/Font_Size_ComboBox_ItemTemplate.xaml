<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/AnnihilatorWindowBase_CustomControl;component/colours.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="Font_Size_ComboBox_ItemTemplate">
        <DockPanel Name="Font_Size_List_ComboBox_DockPanel">
            
            <StackPanel Name="Font_Size_List_ComboBox_StackPanel" Orientation="Horizontal"
                        DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}},Path=DataContext}"
                        Width="200"
                        Height="{Binding ComboBox_Element_Height, Mode=OneWay}"
                        Background="{StaticResource background_Colour}">
                <Image Source="{Binding Font_Size_Symbol_Uri, Mode=OneWay}"
                       VerticalAlignment="Center"
                       Height="{Binding ComboBox_List_Image_Height, Mode=OneWay}"/>
                <TextBlock Text="{Binding ElementName=Font_Size_List_ComboBox_DockPanel, Path=DataContext.Font_Size_Name, Mode=OneWay}"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlock_Style}"/>
            </StackPanel>
            
        </DockPanel>
    </DataTemplate>

</ResourceDictionary>