<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AnnihilatorWindowBase_CustomControl">

    <Style TargetType="TabControl">
        
        <Style.Resources>
            <ResourceDictionary Source="colours.Xaml"/>
        </Style.Resources>

        <Setter Property="Background" Value="{StaticResource borderBrush_Colour}"/>
        <Setter Property="BorderBrush" Value="{StaticResource borderBrush_Colour}"/>
        <Setter Property="BorderThickness" Value="0"/>
        
    </Style>
    
    <Style TargetType="TabItem">

        <Style.Resources>
            <ResourceDictionary Source="colours.Xaml"/>
        </Style.Resources>

        <Setter Property="Background" Value="{StaticResource background_Colour}"/>
        <Setter Property="BorderBrush" Value="{StaticResource borderBrush_Colour}"/>
        <Setter Property="BorderThickness" Value="10"/>
        <Setter Property="FontSize" Value="{Binding Text_FontSize, Mode=OneWay, FallbackValue= 18}"/>
        <Setter Property="Foreground" Value="{StaticResource foreground_Colour}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        
    </Style>

</ResourceDictionary>