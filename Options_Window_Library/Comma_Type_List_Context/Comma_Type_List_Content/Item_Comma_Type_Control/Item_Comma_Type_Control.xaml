<local:Comma_Type_List_Content x:Class="Options_Window_Library.Item_Comma_Type_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Options_Window_Library"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="128">
    <StackPanel Height="{Binding RelativeSource={RelativeSource AncestorType=Window},
                         Path=DataContext.ComboBox_Element_Height, Mode=OneWay}" Orientation="Horizontal">

        <TextBlock Text="{Binding Content_Text, Mode=OneWay}" VerticalAlignment="Center" d:DesignHeight="24"
                   FontSize="{Binding RelativeSource={RelativeSource AncestorType=Window},
                              Path=DataContext.Text_FontSize, Mode=OneWay, FallbackValue= 18}"
                   Width="{Binding Text_Width, Mode=OneWay, FallbackValue=128}"/>
    </StackPanel>
</local:Comma_Type_List_Content>
