<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TabItem" x:Key="TabItem_Style"/>

    <Style TargetType="TabItem" x:Key="Base_TabItem_Style">

        <Setter Property="OverridesDefaultStyle" Value="False"/>
        <Setter Property="FontSize" Value="{Binding Text_FontSize, Mode=OneWay, FallbackValue= 18}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>

    </Style>

    <Style TargetType="TabItem" x:Key="Default_TabItem_Style" BasedOn="{StaticResource Base_TabItem_Style}">

        <Style.Resources>
            <ResourceDictionary Source="colours.Xaml"/>
        </Style.Resources>
        
        <Setter Property="Background" Value="{StaticResource background_Colour}"/>
        <Setter Property="BorderBrush" Value="{StaticResource borderBrush_Colour}"/>
        <Setter Property="BorderThickness" Value="{Binding Border_Thickness, Mode=OneWay, FallbackValue=2}"/>
        <Setter Property="Foreground" Value="{StaticResource foreground_Colour}"/>

    </Style>

</ResourceDictionary>