<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ComboBox" x:Key="ComboBox_Style"/>

    <Style TargetType="ComboBox" x:Key="Base_ComboBox_Style">

        <Setter Property="OverridesDefaultStyle" Value="False"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Height" Value="{Binding RelativeSource={RelativeSource AncestorType={ x:Type Window}}, Path=DataContext.ComboBox_Element_Height, Mode=OneWay, FallbackValue=36}"/>
        <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource AncestorType={ x:Type Window}}, Path=DataContext.ComboBox_Element_Width, Mode=OneWay, FallbackValue=200}"/>

    </Style>

    <Style TargetType="ComboBox" x:Key="Default_ComboBox_Style" BasedOn="{StaticResource Base_ComboBox_Style}">
<!--XYZ-->
        <Setter Property="Background" Value="Bisque"/>
        <Setter Property="Foreground" Value="Azure"/>

        <Setter Property="OverridesDefaultStyle" Value="false"/>

    </Style>

</ResourceDictionary>