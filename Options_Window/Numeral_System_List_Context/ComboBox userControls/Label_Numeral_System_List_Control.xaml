<local:Numeral_System_List_Content x:Class="Options_Window.Label_Numeral_System_List_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Options_Window"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="128">

    <DockPanel>

        <DockPanel.Background>
            <SolidColorBrush Color="Gray"/>
        </DockPanel.Background>

        <TextBlock Text="{Binding Content_Text, Mode=OneWay}" Width="{Binding Text_Width, Mode=OneWay}"
                   FontSize="{Binding RelativeSource={RelativeSource AncestorType=Window},
                              Path=DataContext.Options_Text_FontSize, Mode=OneWay, FallbackValue= 18}"/>

    </DockPanel>
</local:Numeral_System_List_Content>
