<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="DockPanel" x:Key="DockPanel_Style"/>

    <Style TargetType="DockPanel" x:Key="Base_DockPanel_Style">
        
        <Setter Property="OverridesDefaultStyle" Value="False"/>
        
    </Style>
    
    <Style TargetType="DockPanel" x:Key="Default_DockPanel_Style" BasedOn="{StaticResource Base_DockPanel_Style}">

        <Style.Resources>
            <ResourceDictionary Source="colours.Xaml"/>
        </Style.Resources>

        <Setter Property="Background" Value="{StaticResource background_Colour}"/>

    </Style>

</ResourceDictionary>