<Window
        x:Class="Calculator_Annihilator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:b="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Calculator_Annihilator"
        xmlns:Properties="clr-namespace:Calculator_Annihilator.Properties" 
        mc:Ignorable="d"
        Title="MainWindow"
        SizeChanged="Window_Size_Changed"
        StateChanged="Window_State_Changed"
        Activated="Window_Activated"
        Height="{Binding Window_Height, Mode=TwoWay}"
        Width="{Binding Window_Width, Mode=TwoWay}">

    <Window.Resources >
        <Style x:Name="Generic_Button_Style" TargetType="{x:Type Button}" >
            <Setter Property="Margin" Value="1,1,1,1" />
            <Setter Property="FontSize" Value="{Binding Button_FontSize, Mode=OneWay}" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="Consolas" />
        </Style>
    </Window.Resources>
    <Grid x:Name="MainGrid" >
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Menu x:Name="Toolbar" Grid.Row="0" Grid.IsSharedSizeScope="True" >
            <MenuItem Header="View" >

            </MenuItem>

        </Menu>
        <Grid x:Name="WorkGrid" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition SharedSizeGroup="A"/>
                <RowDefinition SharedSizeGroup="A"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="WorkSpace" Grid.Row="0" Grid.ColumnSpan="2" Margin="5,1,5,1" HorizontalAlignment="Stretch"
                     Height="Auto"  FontSize="{Binding WorkSpace_FontSize, Mode=OneWay}" Padding="0,-2,0,-2"
                     Cursor="IBeam" AcceptsReturn="false" TextChanged="WorkSpace_TextChanged" />

            <TextBox x:Name="ResultSpace" Grid.Row="1" Grid.Column="1" Margin="5,1,5,1"
                     Height="Auto" FontSize="{Binding ResultSpace_FontSize, Mode=OneWay}" Padding="0,-2,0,-2"
                     Cursor="IBeam" IsReadOnly="True" TextChanged="ResultSpace_TextChanged"/>

            <Grid Name="CalculationTypeSwitcher_Grid"  Grid.Row="1" Grid.Column="0" Margin="1,1,1,1">
                <Grid.Resources>
                    <Style TargetType="RadioButton">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="{Binding Calculation_Type_Radio_Buttons_FontSize, Mode=OneWay}"/>
                        <Setter Property="Margin" Value="5,1,5,1"/>
                    </Style>
                </Grid.Resources>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <RadioButton GroupName="CalculationTypeSwitcher"  Name="SingleCalculations" HorizontalAlignment="Left" 
                             Margin="15,1,1,1" Grid.Row="0" Checked="Single_Calculations_Button_Checked">
                    <TextBlock Name="SingleCalculations_RadioButton_TextBlock">
                        Single Calculations
                    </TextBlock>
                    
                </RadioButton>
                <RadioButton GroupName="CalculationTypeSwitcher" Name="ComplexCalculations" HorizontalAlignment="Left" 
                             Margin="15,1,1,1" Grid.Row="1" Checked="Complex_Calculations_Button_Checked">
                    <TextBlock Name="ComplexCalculations_RadioButton_TextBlock">
                        Complex Calculations
                    </TextBlock>
                </RadioButton>
            </Grid>
        </Grid>


        <Grid x:Name="ButtonGrid" Grid.Row="2" >
            <Grid.RowDefinitions>
                <RowDefinition SharedSizeGroup="A"/>
                <RowDefinition SharedSizeGroup="A"/>
                <RowDefinition SharedSizeGroup="A"/>
                <RowDefinition SharedSizeGroup="A"/>
                <RowDefinition SharedSizeGroup="A"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="A"/>
                <ColumnDefinition SharedSizeGroup="A"/>
                <ColumnDefinition SharedSizeGroup="A"/>
                <ColumnDefinition SharedSizeGroup="A"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="Button_Open_Bracket" Content="(" Grid.Row="0" Grid.Column="0" 
                    Click="Button_Open_Bracket_Click" />
            <Button x:Name="Button_Close_Bracket" Content=")" Grid.Row="0" Grid.Column="1" 
                    Click="Button_Close_Bracket_Click" />
            <Button x:Name="Button_BackSpace" Content="CE" Grid.Row="0" Grid.Column="2"
                    Click="Button_CE_Click" />
            <Button x:Name="Button_Clear" Content="C" Grid.Row="0" Grid.Column="3" 
                    Click="Button_Clear_Click" />

            <Button x:Name="Button_7" Content="7" Grid.Row="1" Grid.Column="0"
                    Click="Button_7_Click" />
            <Button x:Name="Button_8" Content="8" Grid.Row="1" Grid.Column="1"
                    Click="Button_8_Click" />
            <Button x:Name="Button_9" Content="9" Grid.Row="1" Grid.Column="2"
                    Click="Button_9_Click" />
            <Button x:Name="Button_PlusSign" Content="+" Grid.Row="1" Grid.Column="3"
                    Click="Button_PlusSign_Click" />

            <Button x:Name="Button_6" Content="6" Grid.Row="2" Grid.Column="2"
                    Click="Button_6_Click" />
            <Button x:Name="Button_5" Content="5" Grid.Row="2" Grid.Column="1"
                    Click="Button_5_Click" />
            <Button x:Name="Button_4" Content="4" Grid.Row="2"
                    Click="Button_4_Click" />
            <Button x:Name="Button_MinuSing" Content="-" Grid.Row="2" Grid.Column="3"
                    Click="Button_MinuSing_Click" />

            <Button x:Name="Button_1" Content="1" Grid.Row="3" Grid.Column="0"
                    Click="Button_1_Click" />
            <Button x:Name="Button_2" Content="2" Grid.Row="3" Grid.Column="1"
                    Click="Button_2_Click" />
            <Button x:Name="Button_3" Content="3" Grid.Row="3" Grid.Column="2"
                    Click="Button_3_Click" />
            <Button x:Name="Button_MultiplicationSing" Content="*" Grid.Row="3" Grid.Column="3"
                    Click="Button_MultiplicationSing_Click" />

            <Button x:Name="Button_Comma" Content="," Grid.Row="4" Grid.Column="0"
                    Click="Button_Comma_Click" />
            <Button x:Name="Button_0" Content="0" Grid.Row="54" Grid.Column="1"
                    Click="Button_0_Click" />
            <Button x:Name="Button_Equals" Content="=" Grid.Row="4" Grid.Column="2"
                    Click="Button_Equals_Click" />
            <Button x:Name="Button_DivisionSign" Content="/" Grid.Row="4" Grid.Column="3"
                    Click="Button_DivisionSign_Click" />

        </Grid>
    </Grid>
</Window>
