<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="foreground_Colour" Color="{Binding Foreground_Colour, Mode=OneWay, FallbackValue= Black}"/>

    <SolidColorBrush x:Key="background_Colour" Color="{Binding Background_Colour, Mode=OneWay, FallbackValue= White}"/>

    <SolidColorBrush x:Key="border_Colour" Color="{Binding Control_Border_Colour, Mode=OneWay, FallbackValue= Black}"/>

    <SolidColorBrush x:Key="control_Background_Colour" Color="{Binding Control_Background_Colour, Mode=OneWay, FallbackValue= LightGray}"/>

    <SolidColorBrush x:Key="highlighted_Control_Background_Colour" Color="{Binding Highlighted_Control_Background_Colour, Mode=OneWay, FallbackValue=PowderBlue}"/>

    <SolidColorBrush x:Key="highlighted_Control_Border_Colour" Color="{Binding Highlighted_Control_Border_Colour, Mode=OneWay, FallbackValue=red}"/>

</ResourceDictionary>